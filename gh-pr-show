#!/usr/bin/env bash

echo "Welcome to use gh-pr-show!"

if [ ! -d .git ]
then
    echo "The current directory is not a git repository!"
    exit
fi

REPOINFO=$(gh repo view --json owner,name |jq -r '.name,.owner.login')

LAST=$(gh pr list --limit 1 --state all --json number|jq '.[].number')

